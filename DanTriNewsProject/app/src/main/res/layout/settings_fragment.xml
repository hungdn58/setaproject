<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9dede">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_item_in_list"
        android:clickable="true"
        android:id="@+id/container1">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/item1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_common"
            android:paddingRight="@dimen/padding_common"
            android:paddingTop="@dimen/view_spacing_common"
            android:paddingBottom="@dimen/view_spacing_common"
            android:singleLine="true"
            android:text="Phiên bản hiện tại"
            android:textColor="@color/vnexpress_color"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"></TextView>

        <TextView android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/vnexpress_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_common"
            android:paddingRight="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="@dimen/view_spacing_common"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/container2"
        android:background="@drawable/bg_item_in_list"
        android:layout_below="@+id/container1">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/item2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_common"
            android:paddingRight="@dimen/padding_common"
            android:paddingTop="@dimen/view_spacing_common"
            android:paddingBottom="@dimen/view_spacing_common"
            android:singleLine="true"
            android:text="Liên hệ"
            android:layout_alignParentLeft="true"
            android:textColor="@color/vnexpress_color"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"></TextView>
        <ImageView
            android:id="@+id/list_item_entry_drawable"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="9dp"/>
    </RelativeLayout>

</RelativeLayout>