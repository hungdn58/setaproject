<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_focused="false" android:state_selected="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="@color/tabs_gray_default" />
            <gradient android:angle="-90" android:startColor="@color/tabs_gray_default" android:endColor="@color/tabs_gray_default"  />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="@color/tabs_gray_default" />
            <gradient android:angle="-90" android:startColor="@color/tabs_gray_default" android:endColor="@color/tabs_gray_default"  />
        </shape>
    </item>
    <item android:state_pressed="false"
        android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="@color/tabs_gray_default" />
            <gradient android:angle="-90" android:startColor="@color/tabs_gray_default" android:endColor="@color/tabs_gray_default"  />
        </shape>
    </item>
    <item android:state_pressed="false"
        android:state_focused="false" android:state_selected="false">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="@color/tabs_gray_default" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white"  />
        </shape>
    </item>
</selector>
